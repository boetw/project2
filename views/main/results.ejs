<div>
<h1 class="text-center">Search results for "<%= searchTerm%>"</h1>
<h2 class='text-center'><%=results.length%> result<%if(results.length != 1){%>s<%}%></h2>
</div>
	<% results.forEach(function(data){ %>
		<% if (data.kit != 1){ %>
		<div class="well col-lg-3 col-md-4 col-sm-4 col-xs-10 col-xs-offset-1 col-md-offset-1 col-lg-offset-0" style="height:280px">
		<a href="/details/<%=data.set_id%>">
			<img src="https://img.rebrickable.com/img/sets-b/<%=data.set_id.toLowerCase() %>.jpg"  class="img-responsive" alt="<%= data.theme1 %>" style=" display:inline-block;max-height: 200px;">
			<h4 style="color:black;"><%= data.descr%> (<%= data.year %>) </h4>
			</a>
	</div>
	<br>
	<%}%>
	<% }); %>
